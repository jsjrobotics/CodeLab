<resources>
    <!-- Base application theme. -->
    <style name="Theme.TapToSnap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/font_family</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="Theme.TapToSnap.AlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/alert_dialog_button</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/alert_dialog_button</item>
    </style>
</resources>