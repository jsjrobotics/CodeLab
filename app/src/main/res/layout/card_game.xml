<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_3"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/button_no_state">

    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/game_card_inner_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="H,2:3"
        app:layout_constraintBottom_toTopOf="@id/labelTop">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/dp_10">
            <ImageView
                android:id = "@+id/cameraImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tile_camera"
                android:background="@drawable/game_card_inner_rectangle"
                android:contentDescription="@string/cameraTile"/>
        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/validatingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tapToRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_try_again"
            android:visibility="gone"
            android:layout_gravity="center" />
    </FrameLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/labelTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".75" />
    <TextView
        android:id="@+id/labelDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imageContainer"
        android:gravity="center"
        android:textSize="@dimen/sp_24"
        android:background="@drawable/game_card_label_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>